generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum reminderStatus {
  Pending
  Sent
  Dismissed
}

model User {
  id        Int   @id @default(autoincrement())
  email     String   @unique
  password  String
  cards     Card[]
  reminders Reminder[]
  payments  Payment[]
  createdAt DateTime @default(now())
}

model Card {
  id              String  @id @default(uuid())
  bankName        String
  cardType        String
  number          String
  limit           Float
  balance         Float
  dueDate         DateTime
  userId          String
}

model Reminder {
  id        String   @id @default(uuid())
  message   String
  dueDate   DateTime
  status    reminderStatus   // pending, sent, dismissed
  cardId    String
  card      Card     @relation(fields: [cardId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model Payment {
  id        String   @id @default(uuid())
  amount    Float
  status    String   // pending, success, failed
  cardId    String
  card      Card     @relation(fields: [cardId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

